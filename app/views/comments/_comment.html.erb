<div class="comment row">
  <div class="col-xs-12">
    <%= image_tag("harry_potter_small.jpg", :alt => "Harry Potter", :class => "pull-left") %>
    <h3><%= link_to comment.author.name, user_path(comment.author) %></h3>
    <p>Commented <%= time_ago_in_words(comment.created_at) %> ago</p>
    <p><%= comment.content %></p>
    <div class="col-xs-12">
      <div class="pull-left">
        <%= like_button(comment, comment.commentable) %>
      </div>
      <div class="pull-left">
        <%= likes_count(comment) %>
      </div>
      <% if current_user && comment.author == current_user %>
        <div class="pull-right">
          <%= link_to "Delete", post_comment_path(comment.commentable, comment), method: "DELETE", data: { confirm: "Are you sure you want to delete this post?" } %>
        </div>
      <% end %>
    </div>
  </div>
</div>