<div id="hero">
<div class="row">

  <!--cover images-->
  <div class = "col-md-12">
    <%= image_tag("hogwarts_small.jpg", :class => "hidden-sm hidden-xs", :id => "hero-image", :alt => "Hogwarts Castle") %>
    <div class="hidden-xs hidden-sm" id="profile-picture">
      <%= image_tag("harry_potter_small.jpg", :alt => "Harry Potter") %>
    </div>
  </div>

</div>

<header class="row">
  <!--secondary navbar-->
  <div class = "col-md-7 col-md-offset-3">
    <ul class="nav nav-pills">
      <li><%= link_to 'Timeline', @user %></li>
      <li><%= link_to 'About', user_profile_path(@user) %></li>
      <li><%= link_to 'Photos (123)', photos_path %></li>
      <li><%= link_to "Friends (#{@user.friends.count})", user_friends_path(@user) %></li>
    </ul>
  </div>

  <% if current_user && @user == current_user %>
    <div class = "col-md-2">
      <ul class = "nav">
      <li><%= link_to 'Edit Profile', edit_user_profile_path(@user) %></li>
      </ul>
    </div>
  <% end %>
</header>

</div>