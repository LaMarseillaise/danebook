<section class="info-pane">
  <header class="row">
    <div class="col-md-12">
      <h2>About</h2>
    </div>
  </header>

  <section class = "row">
    <div class = "col-md-6">
      <h3>Basic Information</h3>
      <table class="table">
        <tr>
          <td>Birthday:</td>
          <td><%= @user.birthday %></td>
        </tr>
        <tr>
          <td>College:</td>
          <td><%= @profile.school %></td>
        </tr>
        <tr>
          <td>Hometown:</td>
          <td><%= @profile.hometown %></td>
        </tr>
        <tr>
          <td>Currently Lives:</td>
          <td><%= @profile.current_town %></td>
        </tr>
      </table>

      <h3>Contact Information</h3>
      <table class="table">
        <tr>
          <td>Email:</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td>Telephone:</td>
          <td><%= @profile.phone_number %></td>
        </tr>
      </table>

    </div>

    <div class = "col-md-6">
      <h3>Words to live by</h3>
      <p><%= @profile.quotes %></p>
      <h3>About me</h3>
      <p><%= @profile.about %></p>
    </div>
  </section>

  <footer class="row">
    <% if current_user && @user == current_user %>
      <%= link_to 'Edit Profile', edit_user_profile_path(@user), :class => 'btn btn-large btn-danish btn-block' %>
    <% end %>
  </footer>
</section>