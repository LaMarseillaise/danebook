<!-- everything below the hero -->

  <!-- user information -->
  <aside class = "col-md-4">
    <!-- about -->
    <%= render "user_info" %>

    <!-- photos -->
    <section class="info-pane">
      <div class="row">
        <header class="col-md-12">
            Photos (123)
        </header>
      </div>
      <div class="row">
        <section class="col-md-12">
          <% 9.times do %>
            <div class="col-md-4 col-xs-6">
              <a class = "photo-link" href="#">
                <%= image_tag("icon_photo_small.png", :alt => "Icon Photo") %>
              </a>
            </div>
          <% end %>
        </section>
      </div>
      <div class="row">
        <footer class="col-md-12">
          <a href="photos.html">See more photos!</a>
        </footer>
      </div>

    </section><!--photos-->

    <!-- Friend list -->
    <section class="info-pane">
      <div class="row">
        <header class="col-md-12">
            Friends (542)
        </header>
      </div>
      <div class="row">
        <section class="col-md-12">
          <% 6.times do %>
            <div class="col-md-4 col-xs-6">
              <a href="#">
                <%= image_tag("user_silhouette_generic.gif", :alt => "User Silhouette") %>
              <p>Ron<br> Weasley</p></a>
            </div>
          <% end %>
        </section>
      </div>
      <div class="row">
        <footer class="col-md-12">
          <a href="friends.html">See more friends!</a>
        </footer>
      </div>
    </section><!-- Friend list -->

  </aside><!-- user information -->


  <!--post feed-->
  <div class = "col-md-7 col-md-offset-1">

    <% if current_user && @user == current_user %>
      <%= form_for(@post, {html: { :class => "info-pane" }, url: {controller: 'posts', action: :create }}) do |post_fields| %>
        <header class="row">
          <div class="col-xs-12">
            <h5>New Post</h5>
          </div>
        </header>

        <section class="row">
            <%= post_fields.text_area :content, :class => "form-control", rows: 3, placeholder: "Tell the world! Or at least Denmark..." %>
        </section>

        <footer class="row">
          <div class="form-group col-xs-12">
            <%= post_fields.submit 'Post!', :class => "info-submit pull-right" %>
          </div>
        </footer>
      <% end %>
    <% end %>
    <!-- render post form -->

    <%= render 'post', posts: @posts %>

  </div>
